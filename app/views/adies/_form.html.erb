<div>

  <!-- #this will be for resetting your password -->

<%= form_for @adie, url: add_adie_path do |f|%>

  <div class ="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
    
  </div>
  <div class ="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class ="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
    <%= f.submit  %>
<% end %>

</div>
